{
  "hygiene_rules": {
    "organize_ci_artifacts": {
      "enabled": true,
      "patterns": [
        "ci_orchestration_cycle_*.json",
        "ci_*_results.json",
        "ci_orchestration_results.json"
      ],
      "target_dir": ".ci_artifacts"
    },
    "archive_old_reports": {
      "enabled": true,
      "stale_days": 7,
      "patterns": [
        "*_analysis.md",
        "*_report.md",
        "*_results.json",
        "qa_validation_*.json",
        "*_COMPLETE.md",
        "*_STATUS.md",
        "*_GAP_*.md"
      ],
      "exclude": ["README.md", "CLAUDE.md"]
    },
    "clean_root_directory": {
      "enabled": true,
      "disallowed_files": [
        "full.txt",
        "input.txt",
        "output.txt",
        "test*.txt",
        "*.log",
        "*.tmp",
        "*.bak"
      ]
    },
    "organize_scripts": {
      "enabled": true,
      "root_allowed": ["setup.py", "manage.py", "wsgi.py", "claude-code", "claude-flow*"]
    }
  },
  "automation": {
    "pre_commit_hook": true,
    "ci_integration": true,
    "scheduled_cleanup": "weekly",
    "auto_fix_threshold": 0.8
  }
}
