{
  "hygiene_rules": {
    "organize_ci_artifacts": {
      "enabled": true,
      "patterns": [
        "ci_orchestration_cycle_*.json",
        "ci_*_results.json",
        "ci_orchestration_results.json"
      ],
      "target_dir": ".ci_artifacts"
    },
    "archive_old_reports": {
      "enabled": true,
      "stale_days": 7,
      "patterns": [
        "*_analysis.md",
        "*_report.md",
        "*_results.json",
        "qa_validation_*.json",
        "*_COMPLETE.md",
        "*_STATUS.md",
        "*_GAP_*.md"
      ],
      "exclude": ["README.md", "CLAUDE.md"]
    },
    "clean_root_directory": {
      "enabled": true,
      "disallowed_files": [
        "full.txt",
        "input.txt",
        "output.txt",
        "test*.txt",
        "*.log",
        "*.tmp",
        "*.bak"
      ]
    },
    "organize_scripts": {
      "enabled": true,
      "root_allowed": ["setup.py", "manage.py", "wsgi.py", "claude-code", "claude-flow*"]
    },
    "consolidate_docs": {
      "enabled": true,
      "categories": {
        "reports": ["analysis", "report", "status", "gap"],
        "planning": ["plan", "strategy", "roadmap", "architecture"],
        "guides": ["guide", "manual", "howto", "tutorial"],
        "qa": ["qa_", "validation", "test_report"]
      }
    },
    "remove_duplicates": {
      "enabled": true,
      "similarity_threshold": 0.95,
      "exclude_patterns": ["*.pyc", "__pycache__/*"]
    },
    "clean_temp_files": {
      "enabled": true,
      "patterns": [
        "*.tmp",
        "*.temp",
        "*.bak",
        "*.swp",
        "*.swo",
        "*~",
        ".DS_Store",
        "Thumbs.db"
      ]
    },
    "fix_naming_conventions": {
      "enabled": true,
      "python_style": "snake_case",
      "check_imports": true
    }
  },
  "ignored_directories": [
    ".git",
    "__pycache__",
    "node_modules",
    ".pytest_cache",
    ".venv",
    "venv",
    ".env",
    ".tox",
    ".mypy_cache",
    ".coverage",
    "htmlcov",
    "dist",
    "build",
    "*.egg-info"
  ],
  "archive_settings": {
    "base_dir": ".archive",
    "compress": true,
    "keep_structure": true,
    "index_format": "json"
  },
  "reporting": {
    "include_metrics": true,
    "include_recommendations": true,
    "output_format": "markdown",
    "save_history": true,
    "history_dir": ".hygiene_history"
  },
  "automation": {
    "pre_commit_hook": false,
    "ci_integration": true,
    "scheduled_cleanup": "weekly",
    "auto_fix_threshold": 0.8
  }
}