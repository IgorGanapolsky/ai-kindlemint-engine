name: Quality Gate

on:
  pull_request:
    branches: [ main ]
  push:
    branches: [ main ]

jobs:
  quality-checks:
    name: Code Quality Enforcement
    runs-on: ubuntu-latest

    steps:
    - name: ğŸ”„ Checkout code
      uses: actions/checkout@v4
      with:
        fetch-depth: 0

    - name: ğŸ Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: ğŸ“¦ Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        pip install pytest pytest-cov flake8 mypy black isort
        pip install -e .

    - name: ğŸ¨ Format check (Black)
      run: |
        black --check src/ tests/

    - name: ğŸ“š Import sort check (isort)
      run: |
        isort --check-only src/ tests/

    - name: ğŸ” Linting (Flake8)
      run: |
        flake8 src/ tests/ --max-complexity=10 --max-line-length=88

    - name: ğŸ”’ Type checking (MyPy)
      run: |
        mypy src/ --ignore-missing-imports

    - name: ğŸ§ª Run tests with coverage
      run: |
        pytest tests/ --cov=src/kindlemint --cov-report=xml --cov-report=term

    - name: ğŸ“Š Check minimum coverage
      run: |
        pytest tests/ --cov=src/kindlemint --cov-fail-under=10

    - name: ğŸ“ˆ Upload coverage to Codecov
      uses: codecov/codecov-action@v3
      with:
        file: ./coverage.xml
        flags: unittests
        name: codecov-umbrella

    - name: ğŸ’¬ Comment PR with coverage
      uses: py-cov-action/python-coverage-comment-action@v3
      if: github.event_name == 'pull_request'
      with:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        MINIMUM_GREEN: 15
        MINIMUM_ORANGE: 10
